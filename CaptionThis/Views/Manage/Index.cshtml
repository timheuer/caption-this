@model IndexViewModel
@{
    ViewData["Title"] = "Manage your account";
}

<h2>@ViewData["Title"].</h2>
<p class="text-success">@ViewData["StatusMessage"]</p>

<div>
    <h4>Change your account settings</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>API Token:</dt>
        <dd>
            @if (!string.IsNullOrEmpty(Model.ApiToken))
            {
                <a asp-controller="Manage" asp-action="SetApiToken" class="btn-bracketed">Update</a>
            }
            else
            {
                <a asp-controller="Manage" asp-action="SetApiToken" class="btn-bracketed">Set</a>
            }
        </dd>
        <dt>Video Queue:</dt>
        <dd>
            <a asp-controller="Videos" asp-action="Index" class="btn-bracketed">List</a>
        </dd>
        <dt>Password:</dt>
        <dd>
            @if (Model.HasPassword)
            {
                <a asp-controller="Manage" asp-action="ChangePassword" class="btn-bracketed">Change</a>
            }
            else
            {
                <a asp-controller="Manage" asp-action="SetPassword" class="btn-bracketed">Create</a>
            }
        </dd>
        <dt>External Logins:</dt>
        <dd>

            @Model.Logins.Count <a asp-controller="Manage" asp-action="ManageLogins" class="btn-bracketed">Manage</a>
        </dd>
    </dl>
</div>
